{
  "languages": {
    "Python": {
      "language_servers": ["ruff", "ty"],
      "formatter": {
        "external": {
          "command": "ruff",
          "arguments": ["format", "--stdin-filename", "{buffer_path}", "-"]
        }
      },
      "format_on_save": "on",
      "tab_size": 4
    }
  },
  "lsp": {
    "ruff": {
      "initialization_options": {
        "settings": {
          "lineLength": 99,
          "lint": {
            "preview": true
          }
        }
      }
    },
    "ty": {
      "initialization_options": {
        "settings": {
          "python": {
            "pythonVersion": "3.12"
          }
        }
      }
    }
  }
}
